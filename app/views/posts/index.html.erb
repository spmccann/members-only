<h1> Welcome, <%= current_user.email %> </h1>
<%= button_to('Logout', destroy_user_session_path, :method => :delete) %>
<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
